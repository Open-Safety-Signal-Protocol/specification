{
  "$id": "https://ossp.io/schema/v1.0.0/ai.security.abuse.attempt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OSSP ai.security.abuse.attempt",
  "type": "object",
  "required": ["resource", "vector", "detector_id", "confidence"],
  "properties": {
    "resource": {
      "type": "object",
      "required": ["model_id", "environment"],
      "properties": {
        "model_id": { "type": "string" },
        "model_version": { "type": "string" },
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"]
        }
      },
      "additionalProperties": true
    },
    "vector": {
      "type": "string",
      "enum": [
        "prompt_injection",
        "jailbreak",
        "malware_generation",
        "data_exfiltration",
        "other"
      ]
    },
    "detector_id": { "type": "string" },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "sample_id": { "type": "string" }
  },
  "additionalProperties": true
}
